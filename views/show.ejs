<% layout("/layouts/boilerplate.ejs") %>
<div class="row mt-5">
  <div class="col-8 offset-2">
    <h2>Listing Details</h2>
  </div>
    <div class="card col-6 offset-2"> 
        <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_image"
             onerror="this.onerror=null;this.src='/images/default.jpg';">
        <div class="card-body">
            <p class="card-text"><%= listing.title %></p>
          
            <b><%= listing.description %></b>
            <p>&#8377; <%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %></p>
            <p><%= listing.location %></p>
            <p><%= listing.country %></p>
            <br>
           
  </div>


  <div class="btns">
    <div class="row">
      <div class="col-8 offset-2 d-flex gap-4">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-danger edit-btn">Edit</a>
        <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
          <button class="btn btn-dark">Delete</button>
        </form>
      </div>
    </div>
  </div>
  

      
  </div>
  
 

